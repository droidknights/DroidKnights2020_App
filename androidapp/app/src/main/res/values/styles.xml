<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Setting Custom Font-->
        <item name="android:fontFamily">@font/nanum_square</item>

        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Widget.Knights.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/toolbar_background_white</item>
        <item name="android:titleTextColor">@color/toolbar_textColor_black</item>
    </style>
</resources>
